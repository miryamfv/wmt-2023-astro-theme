---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section id="about-us">
    <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
        <div
            class="max-w-md mx-auto midmd:max-w-none lg:mx-0 lg:pr-10 xl:pr-2 flex-1 flex w-11/12 midmd:w-5/12 lg:w-1/2 midmd:h-auto"
        >
            <div class="w-full midmd:h-full relative py-3">
                <img
                    src={"/images/otelms-ste2.png"}
                    alt="Commission Free"
                    width="1240"
                    height="1385"
                    class="w-auto lineUp"
                />
                <div
                    class="bgdetail absolute rotate-45 -left-5 md:-left-10 lg:-left-20 xl:-left-24 p-1 top-1/2 w-16 h-16 bg-gradient-to-br from-primary to-orange-400 blur-3xl opacity-50"
                >
                </div>
                <div
                    class="bgdetail absolute p-1 -top-4 md:-top-10 right-0 w-20 h-20 bg-gradient-to-br from-primary to-orange-400 rounded-full blur-3xl opacity-60"
                >
                </div>

                <span
                    class="bgdetail absolute w-full aspect-[16/5] -skew-x-12 rounded-full bg-gradient-to-tr from-primary to-green-400 opacity-40 blur-2xl left-0 bottom-0"
                ></span>
            </div>
        </div>
        <div class="flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col short-col">
            <Title>Get Commission Free Bookings</Title>
            <Paragraph className="mt-8 lineUp">
                Save money on Commissions. Show availability on your website and
                allow guest to pay automatically and securely when they book.
            </Paragraph>
            <Paragraph className="mt-2 lineUp">
                Increase Revenue per booking by offering extra items like
                Snacks, Extra Services, Transfers or anything that's on demand
                in your area!
            </Paragraph>
        </div>
    </Container>
</section>
