---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="pb-20 lineUp">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr bg-from-color"
    >
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div
          class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl"
        >
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
          ></span>
        </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div
          class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl"
        >
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
          ></span>
        </div>
      </div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1 class="text-3xl/tight
          font-bold text-heading-1">
          <span>Start selling</span>
        </h1>
        <h1 class="open-close text-3xl/tight
          font-bold text-heading-1">
          <span>more</span><div class="message">
            <div class="text-primary">Rooms</div>
            <div class="text-primary">Tours</div>
            <div class="text-primary">Services</div>
          </div>
        </h1>
        <h1 class="text-3xl/tight
        font-bold text-heading-1">online</h1>
        <Paragraph className={"pt-10"}>
          We'll help you Improve your online Presence. Get more online bookings
          with your own platform.
        </Paragraph>

        <BtnLink
          text="Schedule Your FREE Consultation"
          href="https://calendly.com/miryamfv"
          className="flex justify-center w-full sm:w-max mx-auto my-8"
          variant="primary"
        />
      </div>
    </div>
  </Container>
</section>
<style>
  h1 {
    font-size: 3rem;
    line-height: 1.5;
  }
  h1.open-close {
    /* background: red; */
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    width: 20rem;
    text-align: left;
    margin: 0 auto;
  }

  h1 span {
    /* font-size: 40px; */
    /* margin-left: 40px; */
  }

  .message {
    /* background: gray; */
    display: block;
    /* font-weight: 900; */
    overflow: hidden;
    position: absolute;
    padding-left: 0.5rem;
    top: 0rem;
    left: 7rem;
    animation: openclose 5s ease-in-out infinite;
  }

  @keyframes openclose {
    0% {
      top: 0rem;
      width: 0;
    }
    5% {
      width: 0;
    }
    15% {
      width: 230px;
    }
    30% {
      top: 0rem;
      width: 230px;
    }
    33% {
      top: 0.2rem;
      width: 0;
    }
    35% {
      top: 0.2rem;
      width: 0;
    }
    38% {
      top: -4.5rem;
    }
    48% {
      top: -4.5rem;
      width: 190px;
    }
    62% {
      top: -4.5rem;
      width: 190px;
    }
    66% {
      top: -4.5rem;
      width: 0;
      text-indent: 0;
    }
    71% {
      top: -9rem;
      width: 0;
      text-indent: 5px;
    }
    86% {
      top: -9rem;
      width: 285px;
    }
    95% {
      top: -9rem;
      width: 285px;
    }
    98% {
      top: -9rem;
      width: 0;
      text-indent: 5px;
    }
    100% {
      top: 0;
      width: 0;
      text-indent: 0;
    }
  }
</style>
